{
  "name": "server-js",
  "version": "1.0.0",
  "description": "",
  "main": "lib/main.js",
  "scripts": {
    "dev:tsc": "tsc --watch -p .",
    "dev:serve": "nodemon -e ts,js,ejs -w lib -w templates lib/main.js",
    "dev": "run-p dev:*",
    "lint": "eslint src/*.ts",
    "lint:ci": "mkdir -p reports && eslint --format junit src/*.ts > reports/lint.xml",
    "test:watch": "nodemon -e ts,js -w lib -w test lab -v **/*.test.js",
    "test:dev": "run-p dev:tsc test:watch",
    "test:build": "NODE_ENV=test tsc -p .",
    "test:run": "NODE_ENV=test mocha --require test/fixtures.js",
    "test:ci": "yarn audit --level high && yarn lint:ci && yarn test:build && mkdir -p reports && NODE_ENV=test MOCHA_FILE=reports/results.xml mocha --require test/fixtures.js --reporter mocha-junit-reporter",
    "test": "yarn test:build && yarn test:run",
    "minify:css": "curl -X POST -s --data-urlencode 'input@static/css/style.css' https://cssminifier.com/raw > static/css/style.min.css",
    "build:code": "tsc -p tsconfig-prod.json",
    "build:css:prod": "NODE_ENV=production tailwindcss-cli build src/css/style.css -o static/css/style.css && yarn minify:css",
    "build:css:dev": "tailwindcss-cli build src/css/style.css -o static/css/style.css",
    "build": "run-p build:css:prod build:code",
    "start": "NODE_ENV=production node lib/main.js"
  },
  "engines": {
    "node": ">=12.0",
    "yarn": ">=1.22.0",
    "npm": ">=7.5.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@hapi/code": "^8.0.2",
    "@hapi/lab": "^24.1.0",
    "@tailwindcss/forms": "^0.2.1",
    "@types/bcrypt": "^3.0.0",
    "@types/ejs": "^3.0.5",
    "@types/hapi-pino": "^8.0.1",
    "@types/hapi__cookie": "^10.1.2",
    "@types/hapi__hapi": "^20.0.5",
    "@types/hapi__inert": "^5.2.2",
    "@types/hapi__vision": "^5.5.2",
    "@types/knex-cleaner": "^1.3.0",
    "@types/node": "^14.14.25",
    "@types/nunjucks": "^3.1.4",
    "@types/uuid": "^8.3.0",
    "@types/vision": "^5.3.7",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "autoprefixer": "^10.2.4",
    "chai": "^4.3.0",
    "ejs-lint": "^1.1.0",
    "eslint": "^7.20.0",
    "knex-cleaner": "^1.3.1",
    "mocha": "^8.2.1",
    "mocha-junit-reporter": "^2.0.0",
    "node-html-parser": "^2.1.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.3",
    "tailwindcss-cli": "^0.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/cookie": "^11.0.2",
    "@hapi/hapi": "^20.1.4",
    "@hapi/hoek": "^9.1.1",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "bcrypt": "^5.0.0",
    "bullmq": "^1.32.0",
    "dotenv": "^8.6.0",
    "ejs": "^3.1.7",
    "hapi-pino": "^8.3.0",
    "joi": "^17.4.0",
    "knex": "^0.95.4",
    "laabr": "^6.1.3",
    "moment": "^2.29.1",
    "node-iplocate": "^1.0.2",
    "pg": "^8.6.0"
  }
}
