<%- include("header"); -%>

<div class="bg-white shadow overflow-hidden sm:rounded-lg">

  <div class="px-4 py-5 sm:px-6 flex items-center justify-between flex-wrap sm:flex-nowrap">
    <h3 class="text-2xl leading-6 font-medium text-gray-900">
      <a href="/sites/<%= campaign.site_id %>">
        <%= campaign.domain %>
      </a>
    </h3>
  </div>

  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Review site
        </dt>
        <dd class="mt-1 text-gray-900">
          <a href="<%= campaign.reviewSiteUrl %>">
            <%= campaign.reviewSiteName %> (<%= campaign.reviewSiteUrl %>)
          </a>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Review threshold
        </dt>
        <dd class="mt-1 text-gray-900">
          <%= campaign.reviewThreshold %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Campaign start
        </dt>
        <dd class="mt-1 text-gray-900">
          <%= moment(campaign.start).format("dddd, MMMM Do YYYY") %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Campaign finish
        </dt>
        <dd class="mt-1 text-gray-900">
          <%= moment(campaign.finish).format("dddd, MMMM Do YYYY") %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Thank you text
        </dt>
        <dd class="mt-1 text-gray-900">
          <%= campaign.thankText %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Campaign active?
        </dt>
        <dd class="mt-1 text-gray-900">
          <%= (campaign.active ? "Yes" : "No") %>
        </dd>
      </div>
    </dl>
  </div>
</div>

<form method="POST">
  <div class="flex block w-full justify-center">
    <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
      <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
        Delete
      </button>
      <a href="<%= previousUrl %>">
        <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm">
          Cancel
        </button>
      </a>
    </div>
  </div>
</form>

<%- include("footer"); -%>
