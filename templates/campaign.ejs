<%- include("header"); -%>

<!-- This example requires Tailwind CSS v2.0+ -->
<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      <a href="/sites/<%= campaign.site_id %>">
        <%= campaign.domain %>
      </a>
    </h3>
  </div>
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Review site
        </dt>
        <dd class="mt-1 text-sm text-gray-900">
          <a href="<%= campaign.reviewSiteUrl %>">
            <%= campaign.reviewSiteName %>
          </a>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Review threshold
        </dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= campaign.reviewThreshold %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Campaign start
        </dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= moment(campaign.start).format("dddd, MMMM Do YYYY") %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Campaign finish
        </dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= moment(campaign.finish).format("dddd, MMMM Do YYYY") %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Thank you text
        </dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= campaign.thankText %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Campaign active?
        </dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= (campaign.active ? "Yes" : "No") %>
        </dd>
      </div>
    </dl>
  </div>
</div>

<%- include("footer"); -%>
