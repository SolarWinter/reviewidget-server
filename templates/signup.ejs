<%- include("header"); -%>

<h1>Signup page</h1>
<% if(locals.message) { %>
  <h3><%= locals.message %></h3>
<% } %>

<form method="post">
  <div class="w-2/5 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
    <div class="mb-4">
      <label class="block text-grey-darker text-sm font-bold mb-2" for="email">
        email
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" id="emailInput" type="text" name="email" placeholder="email" required>
    </div>
    <div class="mb-6">
      <label class="block text-grey-darker text-sm font-bold mb-2" for="password">
        Password
      </label>
      <input class="shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3" id="passwordInput" type="password" name="password" placeholder="******************" required>
      <p class="text-red text-xs italic">Please choose a password.</p>
    </div>
    <div class="flex items-center justify-between">
      <input type="submit" id="signupButton" value="Join" class="bg-blue hover:bg-blue-dark text-white font-bold py-2 px-4 rounded">
    </div>
  </div>
</form>

<%- include("footer"); -%>
