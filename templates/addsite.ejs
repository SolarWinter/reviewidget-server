<%- include("header"); -%>

<form method="POST">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg pt-3 my-1">
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <dt class="text-sm font-bold text-gray-700 my-1 pb-3">
            <label for="domain">Website domain (e.g. www.example.com)</label>
          </dt>
          <dd class="mt-1 text-gray-900">
            <input type="text" name="domain" placeholder="your.domain.com" required />
          </dd>
          <div class="error pt-3">
            <% if (locals.errors && locals.errors["domain"]) { %>
              <%= errors["domain"] %>
            <% } %>
          </div>
        </div>
      </dl>
    </div>
  </div>

  <div class="pt-5 pr-6">
    <div class="flex justify-end">
      <button type="button" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Cancel
      </button>
      <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Add
      </button>
    </div>
  </div>
</form>

<%- include("footer"); -%>
